<%= form_with(model: @user, local: true) do |form| %>
  <div class="d-flex flex-row align-items-center mb-4">
    
    <div data-mdb-input-init class="form-outline flex-fill mb-0">
      <%= form.text_field :name, class: "form-control", id: "user_name" %>
      <%= form.label :name, class: "form-label", for: "user_name" %>
    </div>
  </div>

  <div class="d-flex flex-row align-items-center mb-4">
    
    <div data-mdb-input-init class="form-outline flex-fill mb-0">
      <%= form.text_field :position, class: "form-control", id: "user_position" %>
      <%= form.label :position, class: "form-label", for: "user_position" %>
    </div>
  </div>

  <div class="d-flex flex-row align-items-center mb-4">

    <div data-mdb-input-init class="form-outline flex-fill mb-0">
      <%= form.email_field :email, class: "form-control", id: "user_email" %>
      <%= form.label :email, class: "form-label", for: "user_email" %>
    </div>
  </div>

  <div class="d-flex flex-row align-items-center mb-4">
    
    <div data-mdb-input-init class="form-outline flex-fill mb-0">
      <%= form.password_field :password, class: "form-control", id: "user_password" %>
      <%= form.label :password, class: "form-label", for: "user_password" %>
    </div>
  </div>

  <div class="d-flex flex-row align-items-center mb-4">
    <div data-mdb-input-init class="form-outline flex-fill mb-0">
      <%= form.password_field :password_confirmation, class: "form-control", id: "user_password_confirmation" %>
      <%= form.label :password_confirmation, class: "form-label", for: "user_password_confirmation" %>
    </div>
  </div>

  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
    <%= form.submit "Register", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
